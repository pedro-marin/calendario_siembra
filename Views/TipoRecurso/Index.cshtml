@model IEnumerable<calendario.Models.Tiporecurso>

@{
    ViewData["Title"] = "Index";
}

@section Scripts{
    <script>
        $(document).ready(function(){
            $('#tbl_tiporecurso').DataTable();
        });
    </script>
}

<h1>Tabla: Tipo de Recurso</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</p>
<table id="tbl_tiporecurso" class="display">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Fecha de Registro
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreTipoRecurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTipoRecurso" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTipoRecurso" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTipoRecurso" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
